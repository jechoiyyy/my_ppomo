generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskPriority {
  low
  medium
  high
}

enum TaskStatus {
  todo
  in_progress
  done
}

enum SessionType {
  focus
  short_break
  long_break
}

enum SessionStatus {
  in_progress
  completed
  cancelled
}

enum CancelledBy {
  user
  recovery
  system
}

model User {
  id            String           @id @default(uuid())
  email         String           @unique
  passwordHash  String
  timezone      String           @default("Asia/Seoul")
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  tasks         Task[]
  sessions      PomodoroSession[]
  settings      UserSetting?
  refreshTokens RefreshToken[]
}

model Task {
  id                 String     @id @default(uuid())
  userId             String
  title              String     @db.VarChar(200)
  description        String?
  priority           TaskPriority @default(medium)
  status             TaskStatus @default(todo)
  plannedDate        DateTime?  @db.Date
  estimatePomodoros  Int        @default(1)
  completedPomodoros Int        @default(0)
  version            Int        @default(1)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  completedAt        DateTime?
  user               User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions           PomodoroSession[]

  @@index([userId, plannedDate, status])
  @@index([userId, updatedAt(sort: Desc)])
}

model PomodoroSession {
  id          String        @id @default(uuid())
  userId      String
  taskId      String?
  sessionType SessionType
  durationSec Int
  startedAt   DateTime
  endedAt     DateTime?
  completed   Boolean       @default(false)
  status      SessionStatus @default(in_progress)
  cancelledBy CancelledBy?
  createdAt   DateTime      @default(now())
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  task        Task?         @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId, startedAt(sort: Desc)])
  @@index([taskId, startedAt(sort: Desc)])
}

model UserSetting {
  id               String   @id @default(uuid())
  userId           String   @unique
  focusMin         Int      @default(25)
  shortBreakMin    Int      @default(5)
  longBreakMin     Int      @default(15)
  longBreakInterval Int     @default(4)
  autoStartBreak   Boolean  @default(false)
  autoStartFocus   Boolean  @default(false)
  soundEnabled     Boolean  @default(true)
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  jti       String   @unique
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, revoked])
}
